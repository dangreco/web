<!DOCTYPE html>
<html lang="en">
  {{ await comp.meta.head({ title }) }}
  <body
    class="max-w-7xl mx-auto p-4 flex flex-col min-h-screen gap-4 bg-white dark:bg-neutral-900 text-black dark:text-white"
  >
    {{ await comp.layout.header() }}
    <main class="overflow-x-hidden flex-grow">
      <article class="prose mx-auto dark:prose-invert">
        <h1>{{ title }}</h1>
        {{ content }}
      </article>
    </main>
    {{ await comp.layout.footer() }}
  </body>
</html>
